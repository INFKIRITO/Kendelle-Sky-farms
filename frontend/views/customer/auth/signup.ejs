<%- include('../includes/head', { pageTitle: 'Signup' }) %>
</head>
<body>
    <%- include('../includes/header') %>
    <main>
      <h1>Create New Account</h1>
      <form action=""  method="">
        <p>
            <lable for="email">E-Mail</lable>
            <input type="email" id="email" name="email" required>
        </p>
        <p>
            <lable for="email">Confirm E-Mail</lable>
            <input type="email" id="confirm-email" name="confirm-email" required>
        </p>
        <p>
            <lable for="password">Password</lable>
            <input type="password" id="password" name="password" minlength="8" required>
        </p>
        <hr>
        <p>
            <lable for="fullname">Full Name</lable>
            <input type="text" id="fullname" name="fullname" required>
        </p>
        <p>
            <lable for="street">Street</lable>
            <input type="text" id="street" name="street" required>
        </p>
        <p>
            <lable for="postel">Postal Code</lable>
            <input 
            type="text" 
            id="postel" 
            name="postel" 
            minlength="5" 
            maxlength="5" 
            required>
        </p>
        <p>
            <lable for="city">City</lable>
            <input type="text" id="city" name="city" required>
        </p>
        <button class="btn">Create Account</button>
        <p id="switch-form"><a href="/login">Login instead</a></p>
      </form> 
    </main>

<%- include('../includes/footer') %>