<%- include('../../shared/includes/head', { pageTitle: 'Add New Product' }) %>

<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
<main>
    <h1>Add New Product</h1>
    <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">   
        <P>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
        </P>
        <P>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png, image/jpg">

        </P>
        <P>
            <label for="summary">Summary</label>
            <input type="text" id="summary" name="summary" required maxlength="250">
        </P>
        <P>
            <label for="price">Price</label>
            <input type="number" id="price" name="price" min="0.01" step="0.01"required>
        </P>
        <P>
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="7" required></textarea>
        </P>


        <p>
            <button type="reset" class="btn btn-alt">Reset</button>
            <button class="btn">Save</button>
        </p>

    </form>
    
             
</main>

<%- include('../../shared/includes/footer') %>